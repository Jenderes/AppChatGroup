<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/Login_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/login"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" >
                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/Login_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="Login"
                    android:src="@drawable/roskazna"
                    android:scaleType="centerInside"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:id="@+id/Login_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/Login_image"
                    android:layout_marginTop="20dp"

                    android:text="УФК по Нижегородсокй области"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/Login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:hint="  Логин..."
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:padding="8dp"
                android:layout_below="@id/Login_relative"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                />
            <EditText
                android:id="@+id/Login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:hint="  Пароль..."
                android:inputType="textPassword"
                android:background="@drawable/inputs"
                android:padding="8dp"
                android:layout_below="@id/Login_email"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                />
            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Login_password"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:text="Забыли пароль ?"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="17sp"/>
            <Button
                android:id="@+id/Login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@id/forget_password_link"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Вход"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textColor="@color/ColorWhite"
                android:background="@drawable/button"
                />
            <TextView
                android:id="@+id/need_new_account_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/Login_button"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="25dp"
                android:text="Нужен новый аккаунт ?"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="17sp"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>