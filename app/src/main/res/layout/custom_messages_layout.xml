<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_profile"/>
    <TextView
        android:id="@+id/received_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:text="receiver message here"
        android:padding = "10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/received_message_text"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_messages_layout"
        android:text="Отпр. сообщение"
        android:padding="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"/>
</RelativeLayout>